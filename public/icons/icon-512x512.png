<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="512" height="512">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#EC4899;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#10B981;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3B82F6;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Fondo circular -->
  <circle cx="256" cy="256" r="240" fill="url(#grad1)" stroke="#ffffff" stroke-width="12"/>
  
  <!-- Controlador de juego principal -->
  <g transform="translate(256,256)">
    <!-- Cuerpo del controlador -->
    <rect x="-120" y="-45" width="240" height="90" rx="45" ry="45" fill="url(#grad2)" stroke="#ffffff" stroke-width="4"/>
    
    <!-- Botones izquierdos (D-pad) -->
    <rect x="-90" y="-22" width="36" height="12" rx="6" fill="#ffffff" opacity="0.95"/>
    <rect x="-78" y="-34" width="12" height="36" rx="6" fill="#ffffff" opacity="0.95"/>
    
    <!-- Botones derechos ABXY -->
    <circle cx="70" cy="-22" r="12" fill="#ffffff" opacity="0.95"/>
    <circle cx="90" cy="0" r="12" fill="#ffffff" opacity="0.95"/>
    <circle cx="70" cy="22" r="12" fill="#ffffff" opacity="0.95"/>
    <circle cx="50" cy="0" r="12" fill="#ffffff" opacity="0.95"/>
    
    <!-- Letras en botones -->
    <text x="70" y="-18" text-anchor="middle" fill="#3B82F6" font-family="Arial, sans-serif" font-size="10" font-weight="bold">A</text>
    <text x="90" y="4" text-anchor="middle" fill="#3B82F6" font-family="Arial, sans-serif" font-size="10" font-weight="bold">B</text>
    <text x="70" y="26" text-anchor="middle" fill="#3B82F6" font-family="Arial, sans-serif" font-size="10" font-weight="bold">X</text>
    <text x="50" y="4" text-anchor="middle" fill="#3B82F6" font-family="Arial, sans-serif" font-size="10" font-weight="bold">Y</text>
    
    <!-- Joysticks -->
    <circle cx="-30" cy="15" r="15" fill="url(#grad3)" stroke="#ffffff" stroke-width="3"/>
    <circle cx="30" cy="15" r="15" fill="url(#grad3)" stroke="#ffffff" stroke-width="3"/>
    
    <!-- PequeÃ±os joysticks internos -->
    <circle cx="-30" cy="15" r="8" fill="#ffffff" opacity="0.9"/>
    <circle cx="30" cy="15" r="8" fill="#ffffff" opacity="0.9"/>
    
    <!-- Botones superiores -->
    <rect x="-20" y="-30" width="40" height="8" rx="4" fill="#ffffff" opacity="0.8"/>
    <rect x="-15" y="-38" width="30" height="6" rx="3" fill="#ffffff" opacity="0.6"/>
    
    <!-- Detalles adicionales -->
    <rect x="-100" y="25" width="15" height="6" rx="3" fill="#ffffff" opacity="0.7"/>
    <rect x="85" y="25" width="15" height="6" rx="3" fill="#ffffff" opacity="0.7"/>
  </g>
  
  <!-- Efectos de brillo -->
  <circle cx="150" cy="150" r="8" fill="#ffffff" opacity="0.6"/>
  <circle cx="380" cy="120" r="6" fill="#ffffff" opacity="0.4"/>
  <circle cx="80" cy="380" r="5" fill="#ffffff" opacity="0.5"/>
  <circle cx="420" cy="350" r="4" fill="#ffffff" opacity="0.3"/>
  
  <!-- Texto del logo -->
  <text x="256" y="420" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="24" font-weight="bold" opacity="0.9">GAMING HUB</text>
</svg> 